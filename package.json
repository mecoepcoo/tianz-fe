{
  "name": "tianz-fe",
  "private": true,
  "author": "tianz",
  "scripts": {
    "postinstall": "husky install",
    "setup": "npm run reset && pnpm install",
    "commit": "git add . && cz",
    "reset": "pnpm dlx rimraf ./node_modules",
    "clean": "pnpm -r exec -- rimraf ./dist",
    "build": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "lint": "eslint --cache packages/**/*.{j,t}s{,x}",
    "lint:fix": "eslint --cache --fix packages/**/*.{j,t}s{,x}",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@tianz/eslint-config": "workspace:^0.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chalk": "^4.0.0",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "cowsay": "^1.5.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.0",
    "husky": "^4.3.8",
    "iconv-lite": "^0.6.3",
    "inquirer": "^8.2.0",
    "jest": "^27.0.6",
    "jest-html-reporters": "^2.1.6",
    "lint-staged": "^11.1.1",
    "lodash": "^4.17.21",
    "node-notifier": "^10.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "semver": "^7.3.5",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.6",
    "typescript": "^4.4.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{jsx,js,tsx,ts}": [
      "eslint --fix"
    ]
  }
}
